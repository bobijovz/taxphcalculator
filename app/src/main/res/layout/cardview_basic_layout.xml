<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/container_basic"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header_basic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnHeaderLabel"
                    style="@style/ButtonHeaderStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTint="#ccc"
                    android:gravity="center_vertical"
                    android:text="BASIC DETAILS" />

                <TextView
                    android:id="@+id/tvHeaderTotal"
                    style="@style/ButtonHeaderStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="20,000.00"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/content_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ccc" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/label1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider1">

                    <EditText
                        android:id="@+id/edittext_basic_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Basic Salary"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:text="10000" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/tv_sss_label"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/label1"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="SSS Contribution"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_sss_contrib"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textview_philhealth_label"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_sss_label"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_philhealth_label"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_salary_period"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Philhealth Contribution"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_philhealth_contrib"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textview_pagibig_label"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textview_philhealth_label"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_pagibig_label"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_employment_status"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Pag-ibig Contribution"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_pagibig_contrib"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/spinner_civil_status"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textview_pagibig_label"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/label_working_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/spinner_civil_status"
                    android:paddingLeft="10dp"
                    android:text="Working Days"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_daily_rate_label"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textview_pagibig_contrib"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Daily rate"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_daily_rate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_daily_rate_label"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="0.0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_working_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_working_days"
                    android:layout_toLeftOf="@id/textview_sss_contrib"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/string_array_working_days" />


                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/label1"
                    android:paddingLeft="10dp"
                    android:text="Salary Period"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_salary_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label2"
                    android:layout_toLeftOf="@id/textview_sss_contrib"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/string_array_salary_period" />

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_salary_period"
                    android:paddingLeft="10dp"
                    android:text="Employment Status"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_employment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label3"
                    android:layout_toLeftOf="@id/textview_philhealth_contrib"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/string_array_employment_status" />

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_employment_status"
                    android:paddingLeft="10dp"
                    android:text="Civil Status"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_civil_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label4"
                    android:layout_toLeftOf="@id/textview_pagibig_contrib"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/string_array_civil_status" />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>