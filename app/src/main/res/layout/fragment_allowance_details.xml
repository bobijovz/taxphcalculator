<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/container_allowance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transportation" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_cola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="COLA" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_tax_shielded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tax Shielded" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</layout>