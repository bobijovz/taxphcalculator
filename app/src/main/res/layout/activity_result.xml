<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_gross_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gross Salary: " />

        <TextView
            android:id="@+id/tv_total_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gross_salary"
            android:text="Total Deduction: " />

        <TextView
            android:id="@+id/tv_total_allowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_deduction"
            android:text="Total Allowance: " />

        <TextView
            android:id="@+id/tv_total_misc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_allowance"
            android:text="Total Misc: " />

        <TextView
            android:id="@+id/tv_taxable_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_misc"
            android:text="Taxable Income: " />

        <TextView
            android:id="@+id/tv_withholding_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_taxable_income"
            android:text="Withholding Tax: " />

        <TextView
            android:id="@+id/tv_net_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_withholding_tax"
            android:text="Net Salary: " />


    </RelativeLayout>

</LinearLayout>