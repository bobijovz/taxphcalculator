<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp">


                <!--     <ImageView
                         android:id="@+id/divider"
                         android:layout_width="match_parent"
                         android:layout_height="0.5dp"
                         android:background="#555"
                         android:layout_marginBottom="10dp"
                         android:layout_marginTop="10dp"
                         />
     -->


                <TextView
                    android:id="@+id/tv_gross_salary_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:gravity="right"
                    android:text="Gross Salary : "
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gross_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_gross_salary_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_gross_salary_label"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#555" />

                <TextView
                    android:id="@+id/tv_total_deduction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:gravity="right"
                    android:text="Total Deduction : "
                    android:layout_marginLeft="15dp"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tv_total_contribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_total_deduction_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/tv_total_allowance_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:layout_below="@+id/tv_total_deduction_label"
                    android:gravity="right"
                    android:text="Total Allowance : "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_total_allowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_deduction_label"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_total_allowance_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_total_misc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_total_allowance_label"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:layout_below="@+id/tv_total_allowance_label"
                    android:gravity="right"
                    android:text="Total Misc : "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_total_misc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_allowance_label"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_total_misc_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_taxable_income_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_total_allowance_label"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:layout_below="@+id/tv_total_misc_label"
                    android:gravity="right"
                    android:text="Taxable Income : "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_taxable_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_misc_label"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_taxable_income_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_withholding_tax_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_total_allowance_label"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:layout_below="@+id/tv_taxable_income_label"
                    android:gravity="right"
                    android:text="WithholdingTax : "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_withholding_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_taxable_income_label"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_withholding_tax_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tv_withholding_tax"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#555" />

                <TextView
                    android:id="@+id/tv_net_salary_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_total_allowance_label"
                    android:layout_alignRight="@+id/tv_total_deduction_label"
                    android:layout_below="@+id/divider2"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="Net Salary : "
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_net_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_net_salary_label"
                    android:text="1234"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>