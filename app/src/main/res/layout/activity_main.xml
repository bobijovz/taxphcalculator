<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical"
        tools:context="com.itseasyright.app.taxphcalculator.MainActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/container_basic"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/header_basic"
                    style="@style/ButtonHeaderStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#555"
                    android:text="Basic details" />

                <LinearLayout
                    android:id="@+id/content_basic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_basic_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Basic Salary" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Salary Period"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"

                        />

                    <Spinner
                        android:id="@+id/spinner_salary_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/string_array_salary_period" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Employment Status"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"

                        />

                    <Spinner
                        android:id="@+id/spinner_employment_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/string_array_employment_status" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Civil Status"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinner_civil_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/string_array_civil_status" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container_misc"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/header_misc"
                    style="@style/ButtonHeaderStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#555"
                    android:text="Miscellaneous" />

                <LinearLayout
                    android:id="@+id/content_misc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_hmo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="HMO" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_overtime_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Overtime Pay" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_night_differential"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night Differential" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_holiday_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Holiday Pay" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_absent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Absent" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_tardiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tardiness" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_undertime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Undertime" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container_allowance"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/header_allowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allowance"
                    style="@style/ButtonHeaderStyle"
                     />

                <LinearLayout
                    android:id="@+id/content_allowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_meal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Meal" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_transportation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Transportation" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_cola"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="COLA" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Other" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edittext_tax_shielded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tax Shielded" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset"
                android:textColor="#eee"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_selector"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btn_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate"
                android:textColor="#eee"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_selector"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>
