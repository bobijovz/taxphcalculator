<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.itseasyright.app.taxphcalculator.MainActivity"
        android:background="#eee">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic details"
            android:textAlignment="viewStart"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            />
        <LinearLayout
            android:id="@+id/container_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/background_with_shadow">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_basic_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Basic Salary" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_salary_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/string_array_salary_period"
                android:drawSelectorOnTop="true"
                />

            <Spinner
                android:id="@+id/spinner_employment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/string_array_employment_status"
                android:drawSelectorOnTop="true"
                />

            <Spinner
                android:id="@+id/spinner_civil_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/string_array_civil_status"
                android:drawSelectorOnTop="true"
                />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miscellaneous"
            android:textAlignment="viewStart"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            />
        <LinearLayout
            android:id="@+id/container_misc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_hmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="HMO" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_overtime_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Overtime Pay" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_night_differential"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Night Differential" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_holiday_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Holiday Pay" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Absent" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_tardiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tardiness" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_undertime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Undertime" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allowance"
            android:textAlignment="viewStart"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            />

        <LinearLayout
            android:id="@+id/container_allowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_meal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_transportation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Transportation" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_cola"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="COLA" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_tax_shielded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tax Shielded" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />

            <Button
                android:id="@+id/btn_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate" />
        </LinearLayout>
    </LinearLayout>
</layout>
